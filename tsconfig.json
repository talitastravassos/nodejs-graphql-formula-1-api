{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["DOM"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@services/*": ["./src/services/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@views/*": ["./src/views/*"],
      "@config/*": ["./src/config/*"],
      "@types/*": ["./src/@types/*"],
      "@routes/*": ["./src/routes/*"]
    }
  },
  "include": ["src/**/*"]
}
